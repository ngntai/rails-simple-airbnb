
  <h1>Liste des appartements</h1>
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card-flat">
        <img src="https://source.unsplash.com/random/50Ã—<%=rand(30..50)%>/?interior,design" />
        <div class="card-flat-infos">
          <h2><%= flat.name %></h2>
          <p> <%= flat.address %> </p>
